# Environment Variables Template for SAFE-BMAD
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Connection
DATABASE_URL=postgresql://safe_user:safe_password@localhost:5432/safe_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=safe_dev
DB_USER=safe_user
DB_PASSWORD=safe_password

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache Connection
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=dev_redis_password

# Redis Connection Pool Settings
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# API SERVICE CONFIGURATION
# =============================================================================
# FastAPI Service Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
DEBUG=true
RELOAD=true
LOG_LEVEL=DEBUG

# API Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment Type
ENVIRONMENT=development
ENVIRONMENT_NAME=Development Environment

# =============================================================================
# AI/ML MODEL CONFIGURATION
# =============================================================================
# AutoGen AI Model Settings
AI_MODEL_NAME=deepseek-chat
AI_MODEL_BASE_URL=http://localhost:8000/v1
AI_API_KEY=your-deepseek-api-key-here
AI_MODEL_TEMPERATURE=0.7
AI_MODEL_MAX_TOKENS=2000
AI_MODEL_TIMEOUT=30

# AutoGen Configuration
AUTOGEN_MAX_WORKER_AGENTS=5
AUTOGEN_MAX_ROUND_TRIPS=10
AUTOGEN_ENABLE_CODE_EXECUTION=true
AUTOGEN_ENABLE_DOCKER=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Vue.js Frontend Settings
VITE_API_BASE_URL=http://localhost:8000
VITE_ENVIRONMENT=development
VITE_RELOAD=true
VITE_APP_TITLE=S3DA2 - SAFE BMAD System
VITE_APP_VERSION=1.0.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging Settings
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_ROTATION=daily

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Specific Settings
ENABLE_PROFILER=true
ENABLE_SQL_DEBUG=true
ENABLE_REDIS_DEBUG=true
AUTO_RELOAD=true
HOT_RELOAD=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Testing Settings
TEST_DATABASE_URL=postgresql://safe_user:safe_password@localhost:5432/safe_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_LOG_LEVEL=INFO
ENABLE_TEST_FIXTURES=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security Settings (Development - More Relaxed)
ENCRYPTION_KEY=your-encryption-key-here
HASH_ROUNDS=10
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ENABLE_RATE_LIMITING=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true
BACKUP_STORAGE_PATH=backups/

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Settings (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================
# External API Keys (Optional)
GITHUB_API_KEY=your-github-token
SLACK_WEBHOOK_URL=your-slack-webhook-url
JIRA_API_URL=your-jira-instance-url
JIRA_API_TOKEN=your-jira-api-token